<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ace.erp.shiro.persistence.ResourceMapper">

    <resultMap id="resourceResult" type="com.ace.erp.entity.sys.Resource">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="identity" column="identity"/>
        <result property="url" column="url"/>
        <result property="parentId" column="parent_id"/>
        <result property="parentIds" column="parent_ids"/>
        <result property="icon" column="icon"/>
        <result property="weight" column="weight"/>
        <result property="show" column="is_show"/>
        <result property="hasChildren" column="hasChildren" />
    </resultMap>

  <select id="getResourceById" parameterType="java.lang.Long" resultMap="resourceResult">
    SELECT * FROM sys_resource WHERE id = #{resourceId}
  </select>

    <select id="getAllResource" resultMap="resourceResult">
    SELECT id,name,identity,url,parent_id,parent_ids,icon,weight,is_show FROM sys_resource;
  </select>

  <select id="getAllWithSort" parameterType="java.lang.String" resultMap="resourceResult">
    SELECT id,name,identity,url,parent_id,parent_ids,icon,weight,is_show FROM sys_resource where is_show = 1 ORDER by ${sort};
  </select>

    <insert id="save" parameterType="Resource" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO
        sys_resource (name,identity,url,parent_id,parent_ids,icon,weight,is_show)
      VALUES
        (#{name},#{identity}, #{url}, #{parent_id}, #{parent_ids}, #{icon}, #{weight},#{show})
  </insert>

    <update id="update" parameterType="Resource">
        update sys_resource set
        name = #{name},
        <if test="identity != null">
            identity = #{identity},
        </if>
        <if test="url != null">
            url = #{url},
        </if>
        <if test="parent_id != null">
            parent_id = #{parent_id},
        </if>
        <if test="parent_ids != null">
            parent_ids = #{parent_ids},
        </if>
        <if test="icon != null">
            icon = #{icon},
        </if>
        <if test="weight != null">
            weight = #{weight},
        </if>
        <if test="show != null">
            show = #{show},
        </if>
        where id = #{id}
    </update>

</mapper>